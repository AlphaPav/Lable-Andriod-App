<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".History_entity_detail"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="40dp"
            android:background="@drawable/button_shape"
            android:textSize="17dp"
            android:id="@+id/title"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="40dp"
            android:background="@drawable/content_shape"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:id="@+id/content"
            />

        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/all_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            app:container_background_color="#f0ffea"
            app:container_enable_drag="false"
            app:horizontal_interval="10dp"
            app:tag_clickable="false"
            app:tag_enable_cross="false"
            app:vertical_interval="10dp" />

        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/all_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            app:container_background_color="#e4eaff"
            app:container_enable_drag="true"
            app:horizontal_interval="10dp"
            app:tag_clickable="true"
            app:tag_enable_cross="false"
            app:tag_theme="pure_teal"
            app:vertical_interval="10dp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>